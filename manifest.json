{
    "manifest_version": 3,
    "name": "Get Shein Data",
    "version": "1.0",
    "description": "Collect order data from shein",
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["src/js/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["src/js/content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "src/html/popup.html",
        "default_icon": {
            "16": "images/logo.jpg",
            "48": "images/logo.jpg",
            "128": "images/logo.jpg"
        }
    },
    "icons": {
        "16": "images/logo.jpg",
        "48": "images/logo.jpg",
        "128": "images/logo.jpg"
    }
}